<h1>Log In</h1>

<%= form_with url: login_path do |form| %>
    <%# Errors %>
    <% if flash[:alert] %>
        <div>
            <p><%= flash[:alert] %></p>
        </div>
    <% end %>

    <%# Login form %>
    <div>
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>

    <div>
        <%= form.submit "Log In" %>
    </div>
<% end %>